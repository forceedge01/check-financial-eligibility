{
  "id": "http://localhost:3000/schemas/applicant.json",
  "schema": "http://json-schema.org/draft-04/schema#",
  "title": "Legal Aid Check Financial Eligibility create applicant payload schema",
  "type": "object",
  "required": ["applicant"],
  "properties": {
    "applicant": {
      "type": "object",
      "required": ["date_of_birth", "involvement_type", "has_partner_opponent", "receives_qualifying_benefit"],
      "properties": {
        "date_of_birth": {
          "$ref": "http://localhost:3000/schemas/assessment_request.json#/definitions/date"
        },
        "involvement_type": {
          "type": "string",
          "pattern": "^applicant"
        },
        "has_partner_opponent": {
          "type": "boolean"
        },
        "receives_qualifying_benefit": {
           "type": "boolean"
        }
      }
    }
  }
}
